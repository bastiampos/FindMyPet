<%- include('partials/head.ejs')  %>
<%- include('partials/header.ejs')  %>
    <main class="register-main">
        <section class="register">
            <h2>Create a new post</h2>
            <p>If you are searching your pet, or you found one, complete the form</p>
            <form method="POST" action="/posts">
                <div>
                    <label for="title">Name</label>
                    <input type="text" name="title" placeholder="Your pet's name"/>
                </div>
                <div>
                    <label for="picture">Picture</label>
                    <input type="text" name="picture" placeholder="Add an url"/>
                </div>
                <div class="description-ad">
                    <label for="features">Features</label>
                    <input type="text" name="features" id="features"/>
                </div>
                <div>
                    <label for="date">When</label>
                    <input type="date" name="date" placeholder="When did it happen?"/>
                </div>
                <div>
                    <label for="location">Location</label>
                    <input type="text" name="location" id="location" placeholder="Where did it happen?"/>
                </div>
                <div>
                    <label for="number">To comunicate</label>
                    <input type="number" name="number" placeholder="Write a number"/>
                </div>
                <div>
                    <label for="status">Pet Status</label>
                    <select name="status" id="status">
                        <!-- <option disabled>Select an option</option> -->
                        <option>Searching my pet</option>
                        <option>Found a someone's pet</option>
                    </select>
                </div>
                <input class="submit-signin" type="submit" value="Create post">
            </form>
        </section>
        <section 
            style="background-image: url('https://cdn.dribbble.com/users/1731254/screenshots/10881915/media/1e7a5b8f9a8eba3e7ad8f6275097efde.png?compress=1&resize=1200x900'); width: 50%; background-size: cover;">
        </section>
<%- include('partials/footer.ejs')  %>